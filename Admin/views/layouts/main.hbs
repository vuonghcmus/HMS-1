<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Admin</title>
    <link rel="stylesheet" href="/css/tooplate-style.css" />
    <link rel="stylesheet" href="/css/styles.css"/>
    <link rel="stylesheet" href="/css/my_style.css" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

     {{{_sections.css_chart}}}

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <script
      src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js"
      type="text/javascript"
    ></script>
    <link
      href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
      <!-- Navbar Brand-->
      <a class="navbar-brand ps-3" href="/">Admin</a>
      <!-- Sidebar Toggle-->
      <button
        class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0"
        id="sidebarToggle"
        href="#!"
      ><i class="fas fa-bars"></i></button>
      <!-- Navbar Search-->
      <form
        class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0"
      >
        <div class="input-group">
          <input
            hidden
            class="form-control"
            type="text"
            placeholder="Tìm kiếm..."
            aria-label="Search for..."
            aria-describedby="btnNavbarSearch"
          />
          <button
            hidden
            class="btn btn-primary"
            id="btnNavbarSearch"
            type="button"
          ><i class="fas fa-search"></i></button>
        </div>
      </form>

      {{#if isAuthenticated}}
        <p class="navbar-text" style="margin-top: auto;">
          Welcome
          <b> {{authUser.fullname}}</b>
        </p>
      {{/if}}
      <!-- Navbar-->
      <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            id="navbarDropdown"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          ><i class="fas fa-user fa-fw"></i></a>
          <ul
            class="dropdown-menu dropdown-menu-end"
            aria-labelledby="navbarDropdown"
          >
            <li
              class="d-flex align-items-center justify-content-around dropdown-item"
            >
              <i class="fas fa-sign-out-alt"></i>
              <a class="dropdown-item" href="/admin/logout">Đăng xuất</a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li
              class="d-flex align-items-center justify-content-around dropdown-item"
            >
              <i class="fas fa-user-circle"></i>
              <a class="dropdown-item" href="/admin/profile">Thông tin tài khoản</a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li
              class="d-flex align-items-center justify-content-around dropdown-item"
            >
              <i class="fas fa-user-edit"></i>
              <a class="dropdown-item" href="/admin/edit-profile">Cập nhật tài
                khoản</a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li
              class="d-flex align-items-center justify-content-around dropdown-item"
            >
              <i class="fas fa-user-plus"></i>
              <a class="dropdown-item" href="/admin/add-admin">Thêm admin</a>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
    <div id="layoutSidenav">
      <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
          <div class="sb-sidenav-menu">
            <div class="nav">
              <div class="sb-sidenav-menu-heading">Tài khoản</div>

              <a class="nav-link" href="/staff?page=1">
                <div class="sb-nav-link-icon"><i
                    class="fas fa-list-ul"
                  ></i></div>
                Xem danh sách
              </a>

              <div class="sb-sidenav-menu-heading">Doanh thu</div>
              <a class="nav-link" href="/revenue?page=1">
                <div class="sb-nav-link-icon"><i
                    class="fas fa-list-ul"
                  ></i></div>
                Tổng doanh thu
              </a>

              <div class="sb-sidenav-menu-heading">Dịch vụ</div>
              <a class="nav-link" href="/service?page=1">
                <div class="sb-nav-link-icon"><i
                    class="fas fa-list-ul"
                  ></i></div>
                Xem danh sách
              </a>

              <a class="nav-link" href="/service-type?page=1">
                <div class="sb-nav-link-icon"><i
                    class="fas fa-indent"
                  ></i></div>
                Loại dịch vụ
              </a>

              <div class="sb-sidenav-menu-heading">Loại phòng</div>
              <a class="nav-link" href="/room-type?page=1">
                <div class="sb-nav-link-icon"><i
                    class="fas fa-list-ul"
                  ></i></div>
                Xem danh sách
              </a>
            </div>
          </div>

        </nav>
      </div>
      <div id="layoutSidenav_content">
        {{{body}}}
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    {{{_sections.js_chart}}}

    <script src="/js/scripts.js"></script>
    <script src="/js/search.js"></script>
  </body>
</html>